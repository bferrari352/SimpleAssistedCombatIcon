<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<Script file="CombatAssistIcon.lua"/>

    <Frame name="AssistedCombatIconFrame" inherits="BackdropTemplate" mixin="AssistedCombatIconMixin" parent="UIParent" movable="true" enableMouse="true" clampedToScreen="true" hidden="false">
        <Size x="40" y="40"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" setAllPoints="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="1" y="-1"/>
                        <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                    </Anchors>
                    <TexCoords left="0.06" right="0.94" top="0.06" bottom="0.94"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="Keybind" inherits="NumberFontNormalSmall" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-4" y="-4"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Cooldown parentKey="Cooldown" enableMouse="false" inherits="CooldownFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
            </Cooldown>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
            <OnUpdate method="OnUpdate"/>
            <OnDragStart method="OnDragStart"/>
            <OnDragStop method="OnDragStop"/>
        </Scripts>
    </Frame>
</Ui>